<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape1"
    tools:context=".HelpYou">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/help"/>
    <LinearLayout
        android:id="@+id/l_help_phone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/help_phone_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/phone" />

        <View
            android:layout_width="1px"
            android:layout_height="22dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_help_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="15"
            android:focusable="true"
            android:hint="联系电话"
            android:imeOptions="actionDone"
            android:inputType="textPhonetic"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/sandybrown"
            android:textColorHint="@color/sandybrown"
            android:textCursorDrawable="@null"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_help_phone_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_help_id"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/help_id_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/id" />

        <View
            android:layout_width="1px"
            android:layout_height="22dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_help_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="15"
            android:focusable="true"
            android:hint="确认学号"
            android:imeOptions="actionDone"
            android:inputType="textPhonetic"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/sandybrown"
            android:textColorHint="@color/sandybrown"
            android:textCursorDrawable="@null"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_help_id_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_clear" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:textStyle="bold"
        android:id="@+id/btn_save"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>